<p id="notice"><%= notice %></p>
<div style="background: #999">
<h1>ハムスターの基本情報</h1>

<table >
  <thead>
    <tr>
      <th>名前</th>
      <th>身長</th>
      <th>出身</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @hamster.hamstername %></td>
      <td><%= @hamster.high %></td>
      <td><%= @hamster.city %></td>
    </tr>
  </tbody>
</table>

</div>

<h1>備忘録</h1>
<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        <td><%= memo.body %></td>
        <td><%= link_to 'Show', memo %></td>
        <td><%= link_to 'Edit', edit_memo_path(memo) %></td>
        <td><%= link_to 'Destroy', memo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Memo', new_hamster_memo_path %>
